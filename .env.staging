# PaperTerrace Staging Environment Variables

# =============================================================================
# Google Cloud / AI Provider Settings
# =============================================================================
GCP_PROJECT=gen-lang-client-0800253336
GCP_REGION=asia-northeast1

# AI Model Settings
MODEL_OCR=gemini-1.5-flash
MODEL_TRANSLATE=gemini-1.5-flash
MODEL_VISION=gemini-1.5-flash

# =============================================================================
# ServiceB（推論サービス）連携設定 - Staging
# =============================================================================
# 推論サービスのURL（ServiceB）- staging環境では自動設定
INFERENCE_SERVICE_URL=https://paperterrace-inference-staging-xxx.run.app
# 推論サービスのタイムアウト（秒）
INFERENCE_SERVICE_TIMEOUT=30
# 推論サービスのリトライ回数
INFERENCE_SERVICE_RETRIES=3

# =============================================================================
# Redis Configuration - Staging
# =============================================================================
# Redis host (localhost for development, Memorystore IP for staging)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1  # staging用に別のDB番号を使用

# =============================================================================
# Storage Settings - Staging
# =============================================================================
# For staging, use local storage
LOCAL_STORAGE_PATH=static/paper_images

# =============================================================================
# Database Settings - Staging
# =============================================================================
DATABASE_URL=sqlite:///./data/paperterrace_staging.db

# =============================================================================
# Application Settings - Staging
# =============================================================================
MAX_CONTEXT_LENGTH=800

# Staging環境フラグ
ENVIRONMENT=staging
DEBUG=true

# =============================================================================
# Logging Settings - Staging
# =============================================================================
LOG_LEVEL=DEBUG